=form_with(model: album) do |form|
  .row
    .col-form-label 名前
    .col= form.text_field :name, class: "form-control"
  .row
    .col-form-label 聴き大会
    .col= form.date_select :kiki_taikai_date, class: "form-control"
  .row
    .col-form-label ジャケット
    .col= form.file_field :jacket, class: "form-control", accept: "image/jpeg, image/png"
  .row
    .col
      = album&.jacket&.attached? ? "jacketが存在します" : "jacketが存在しません"
  .row.mt-3
    .col
      リリース
      = form.check_box :released
  .row.mt-3.d-inline-block
    .col
      = form.submit action, class: "btn btn-primary"
