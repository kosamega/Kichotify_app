
.album-info.mb-4
  .album-info-jaket
    = image_tag(@album.jacket.variant(resize: "300").processed, class: "album-jaket-img")
  .album-info-text
    %div
      %h1= @album.name
   
= render "musics/music"

.container-fluid.mb-2.h-auto.overflow-hidden
  .btn.btn-info#add-music.float-end.d-inline-block 曲を追加
  %button.btn.btn-info.float-end.me-2.d-inline-block
    =link_to "アルバムを編集", edit_album_path(@album)

.d-none#add-music-form
  =form_with(model: [@album, @album.musics.build], local: false) do |form|
    .row
      .col-form-label 曲名
      .col= form.text_field :name, class: "form-control"
    .row
      .col-form-label アーティスト名
      .col= form.text_field :artist, class: "form-control"
    .row
      .col-form-label トラック
      .col= form.text_field :track, class: "form-control"
    .row
      .col-form-label 
      .col= form.file_field :audio, class: "form-control"
    .row
      .col=button_tag '作成', type: :submit, class: "btn btn-primary", data: { confirm: "追加しますか" }

= javascript_include_tag 'music_new.js', data: {"turbolinks" => false}
