%h1= @user.name
%p= @user.bio
- if @user == current_user && !(@user.id == 2)
  = link_to("編集", "/users/#{current_user.id}/edit", class: "edit-btn")
- unless @user.id == 2
  - if @user == current_user
    %h2 プレイリスト
    %ul
      - @playlists.each do |playlist|
        %li= link_to(playlist.name, "/playlists/#{playlist.id}")
  - else
    %h2 公開プレイリスト
    %ul
      - @playlists.each do |playlist|
        - if playlist.public == 1
          %li= link_to(playlist.name, "/playlists/#{playlist.id}")
