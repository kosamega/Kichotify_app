<h1><%=@user.name%></h1>
<p><%= @user.bio %></p>
<% if @user == current_user && !(@user.id == 2) %>
    <%= link_to("編集", "/users/#{current_user.id}/edit", class: "edit-btn") %>
<% end %>


<% unless @user.id == 2 %>
    <% if @user == current_user %>
        <h2>プレイリスト</h2>
        <ul>
            <% @playlists.each do |playlist| %>
            <li><%= link_to(playlist.name, "/playlists/#{playlist.id}") %></li>
            <% end %>
        </ul>
    <% else %>
        <h2>公開プレイリスト</h2>
        <ul>
            <% @playlists.each do |playlist| %>
                <% if playlist.public == 1 %>
                    <li><%= link_to(playlist.name, "/playlists/#{playlist.id}") %></li>
                <% end %>
            <% end %>
        </ul>
    <% end %>
<% end %>