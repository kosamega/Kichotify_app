<div class="top-bar">
    <div class="top-bar-left">
        <%= form_with(url: "/search/result", scope: :search, method: :get, local: true,) do |f| %>
            <%= f.text_field :content %>
        <% end %>
    </div>
    <div class="top-bar-right">
        <% if logged_in? %>
            <p id="user"><%= current_user.name %></p>
            <div id="user-ddmenu">
                <ul>
                    <li>設定</li>
                    <li><%= link_to("ログアウト", "/logout", {method: :delete})%></li>
                </ul>
            </div>
        <% else %>
            <p id="user">ゲスト</p>
            <div id="user-ddmenu">
                <ul>
                    <li><%= link_to("ログイン", "/login") %></li>
                </ul>
            </div>
        <% end %>
    </div>
</div>